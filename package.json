{
	"name": "rune-form",
	"version": "0.1.0",
	"description": "Type-safe reactive form builder for Svelte 5",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"dist/zodAdapter.js",
		"dist/zodAdapter.d.ts",
		"dist/helper.js",
		"dist/helper.d.ts"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./zodAdapter": {
			"types": "./dist/zodAdapter.d.ts",
			"svelte": "./dist/zodAdapter.js"
		},
		"./helper": {
			"types": "./dist/helper.d.ts",
			"svelte": "./dist/helper.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.31.0",
		"@playwright/test": "^1.54.1",
		"@sveltejs/adapter-node": "^5.2.13",
		"@sveltejs/kit": "^2.24.0",
		"@sveltejs/package": "^2.4.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"svelte": "^5.36.2",
		"svelte-check": "^4.2.2",
		"svelte-render-scan": "^1.1.0",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4",
		"zod": "^4.0.5"
	},
	"keywords": [
		"svelte",
		"rune",
		"form",
		"validation",
		"zod",
		"runes",
		"reactive",
		"type-safe",
		"sveltekit"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AntonPavlenkov/rune-form.git"
	},
	"bugs": {
		"url": "https://github.com/AntonPavlenkov/rune-form/issues"
	},
	"homepage": "https://github.com/AntonPavlenkov/rune-form#readme",
	"license": "MIT",
	"engines": {
		"node": ">=24",
		"npm": ">=9"
	}
}
